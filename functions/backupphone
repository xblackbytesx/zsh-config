function backupPhone {
  foldername=$(date +%Y%m%d)
  backuplocation=~/Documents/backups/android/"$foldername"
  echo "location is $backuplocation"

  mkdir -p "$backuplocation"
  cd "$backuplocation"

  sudo adb devices

  echo "Backing up Photos dir"
  sudo adb pull "/sdcard/DCIM"

  echo "Backing up content dir"
  mkdir -p content
  cd content
  sudo adb pull "/sdcard/content/titanium"
  sudo adb pull "/sdcard/content/call-recordings"
  sudo adb pull "/sdcard/content/vault"
  sudo adb pull "/sdcard/content/pebble"
  sudo adb pull "/sdcard/content/bip"
  sudo adb pull "/sdcard/content/band3"
  sudo adb pull "/sdcard/content/music"

  cd "$backuplocation"

  sudo adb pull "/sdcard/Download"
  sudo adb pull "/sdcard/Pictures"
  sudo adb pull "/sdcard/Record"
  sudo adb pull "/sdcard/Signal"
  sudo adb pull "/sdcard/Snapseed"
  sudo adb pull "/sdcard/Movies"
  sudo adb pull "/sdcard/DJI"
  sudo adb pull "/sdcard/data"
  sudo adb pull "/sdcard/GCam"
  sudo adb pull "/sdcard/afwall"
  sudo adb pull "/sdcard/RecordersRecycle"
  sudo adb pull "/sdcard/WhatsApp"

  mkdir -p Android
  cd Android
  sudo adb pull "/sdcard/Android/data"
  sudo adb pull "/sdcard/Android/media"
  sudo adb pull "/sdcard/Android/obb"

  cd "$backuplocation"
  sudo chown -R fabio:users "$backuplocation"

  sudo sync

  echo "Done!"
}
